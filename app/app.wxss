@import 'style/weui.wxss';

/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__hd_control {
  position: relative;
  font-weight: bold;
  text-align: right;
  padding: 5px 10px;
  color: #e67300;
}

.page__bd {
  position: relative;
  margin-bottom: 30px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  position: fixed;
  font-weight: bold;
  bottom: 5px;
  right: 5px;
  padding: 5px 10px;
  color: #e67300;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
  margin: 20px 30px;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
